<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroidAppTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/dimen_0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">@dimen/dimen_0dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingStart">@dimen/dimen_22dp</item>
        <item name="android:paddingEnd">@dimen/dimen_22dp</item>
    </style>

    <style name="AndroidAppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="cornerRadius">@dimen/dimen_4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AndroidAppButton.White">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AndroidAppTextButton.Blue">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>